<h1><%= @restaurant.name %></h1>

<div class="alert alert-primary mt-4" role="alert">
  <p>
    <strong>Address</strong>: <%= @restaurant.address %>
  </p>
  <p>
    <strong>Phone number</strong>: <%= @restaurant.phone_number %>
  </p>
  <p>
    <strong>Category</strong>: <%= @restaurant.category %>
  </p>
</div>

<div class="row">
  <div class="col-8">
    <h4>Reviews</h4>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <p>
            <%= review.content %>
          </p>
          <p class="ms-3 flex-shrink-0">
            <%= review.rating %> stars
          </p>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-4">
    <h4>New review</h4>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating, collection: 0..5 %>
      <%= f.input :content %>
      <%= f.submit "Add review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<hr>

<%= link_to "Back to restaurants", restaurants_path %>
